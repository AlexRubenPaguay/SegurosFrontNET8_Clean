@model SegurosFrontNET8_Clean.Models.Seguro

@{

    ViewData["Title"] = "Crear Seguro";

    var cliente = ViewBag.Cliente as Cliente;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-shield-plus"></i> Registrar Seguro</h3>
                </div>
                <div class="card-body">
                    <h5> DATOS DE CLIENTE</h5>
                    <hr />
                    <p>Cliente: @cliente?.Nombre</p>
                    <p>Cédula: @cliente?.Cedula</p>
                    <h5> DATOS DE SEGURO</h5>
                    <hr />
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Codigo" class="form-control" placeholder="Código" />
                                    <label asp-for="Codigo">Código del Seguro</label>
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <label asp-for="Nombre">Nombre del Seguro</label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Suma" class="form-control" placeholder="Suma Asegurada" type="number" step="0.01" />
                                    <label asp-for="Suma">Suma Asegurada ($)</label>
                                    <span asp-validation-for="Suma" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Prima" class="form-control" placeholder="Prima" type="number" step="0.01" />
                                    <label asp-for="Prima">Prima ($)</label>
                                    <span asp-validation-for="Prima" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3" hidden>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="IdCliente" class="form-control" value=@cliente.IdCliente placeholder="ID Cliente" type="number" />
                                    <label asp-for="IdCliente">ID del Cliente</label>
                                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                                </div>
                                <small class="text-muted">Opcional - Dejar vacío si no está asignado</small>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" asp-controller="Cliente" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Seguro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}