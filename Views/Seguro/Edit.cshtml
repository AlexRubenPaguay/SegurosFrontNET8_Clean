@model ClienteSeguroViewModel

@{

    ViewData["Title"] = "Crear Seguro";

    var cliente = ViewBag.Cliente as Cliente;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-shield-plus"></i> Registrar Seguro</h3>
                </div>
                <div class="card-body">
                    <h5> DATOS DE CLIENTE</h5>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Cliente.Nombre" class="form-control" placeholder="Nombre" readonly="@(true)" value="@Model.Cliente.Nombre" />
                                <label asp-for="Cliente.Nombre">Nombre:</label>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Cliente.Cedula" class="form-control" placeholder="Cédula" readonly="@(true)" value="@Model.Cliente.Cedula" />
                                <label asp-for="Cliente.Cedula">Cédula</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5> DATOS DE SEGURO</h5>
                    <hr />
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row mb-3">
                            <div class="col-md-6" hidden>
                                <div class="form-floating">
                                    <input asp-for="Seguro.IdCliente" class="form-control" placeholder="IdCliente" value="@Model.Seguro.IdCliente" />
                                    <label asp-for="Seguro.IdCliente">ID del Cliente</label>
                                </div>
                            </div>
                            <div class="col-md-6" hidden>
                                <div class="form-floating">
                                    <input asp-for="Seguro.IdSeguro" class="form-control" placeholder="Código" value="@Model.Seguro.IdSeguro" />
                                    <label asp-for="Seguro.IdSeguro">ID del Seguro</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Seguro.Codigo" class="form-control" placeholder="Código" />
                                    <label asp-for="Seguro.Codigo">Código del Seguro</label>
                                    <span asp-validation-for="Seguro.Codigo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Seguro.Nombre" class="form-control" placeholder="Nombre" />
                                    <label asp-for="Seguro.Nombre">Nombre del Seguro</label>
                                    <span asp-validation-for="Seguro.Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Seguro.Suma" class="form-control" placeholder="Suma Asegurada" type="number" step="0.01" />
                                    <label asp-for="Seguro.Suma">Suma Asegurada ($)</label>
                                    <span asp-validation-for="Seguro.Suma" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Seguro.Prima" class="form-control" placeholder="Prima" type="number" step="0.01" />
                                    <label asp-for="Seguro.Prima">Prima ($)</label>
                                    <span asp-validation-for="Seguro.Prima" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" asp-controller="Seguro" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary" asp-route-IdSeguro="@Model.Seguro.IdSeguro">
                                <i class="bi bi-save"></i> Guardar Seguro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
