@model Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Cliente</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @* Campo oculto para el ID *@
                        <input type="hidden" asp-for="IdCliente" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Cedula" class="form-control" placeholder="Cédula" readonly="@(true)" />
                                    <label asp-for="Cedula">Cédula</label>
                                    <span asp-validation-for="Cedula" class="text-danger"></span>
                                    <small class="text-muted">La cédula no se puede modificar</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <label asp-for="Nombre">Nombre Completo</label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                                    <label asp-for="Telefono">Teléfono</label>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Edad" class="form-control" placeholder="Edad" type="number" />
                                    <label asp-for="Edad">Edad</label>
                                    <span asp-validation-for="Edad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning" asp-route-IdCliente="@Model.IdCliente">
                                <i class="bi bi-save"></i> Actualizar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}